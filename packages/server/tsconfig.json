{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "outDir": "dist",
    "rootDir": ".",
    "rootDirs": ["src", "test"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./test/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "test/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}

